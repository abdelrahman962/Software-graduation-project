# Server Configuration
PORT=5000

# Database Configuration
# Replace with your MongoDB connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/DatabaseName?retryWrites=true&w=majority

# JWT Secret Key
# IMPORTANT: Generate a strong random secret for production!
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_this_to_a_strong_random_string

# Email Configuration (Optional - for future implementation)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Node Environment
NODE_ENV=development
